{
  "name": "testing-postgres-node-jest",
  "version": "1.0.0",
  "description": "Example serverless api using Postgres, Node, and Jest",
  "author": "alex@platter.dev",
  "license": "MIT",
  "keywords": [
    "platter",
    "postgres",
    "testing",
    "jest"
  ],
  "scripts": {
    "build": "BRANCH=$HEAD platter build",
    "watch": "netlify dev",
    "test": "jest",
    "migrate:up": "PLATTER_POSTGRES_CLIENT=platter/postgres/node/TestingPostgresNodeJest migrate up --store='@platter/migrate-store'",
    "migrate:down": "PLATTER_POSTGRES_CLIENT=platter/postgres/node/TestingPostgresNodeJest migrate down --store='@platter/migrate-store'"
  },
  "devDependencies": {
    "@platter/migrate-store": "^0.4.0",
    "faker": "^5.5.3",
    "jest": "^26.6.3",
    "migrate": "^1.7.0",
    "netlify-cli": "^3.23.1",
    "platter": "^0.8.2"
  },
  "dependencies": {
    "uuid": "^8.3.2"
  },
  "platter": {
    "postgres": {
      "4b26fa27-f399-417f-901d-98bf97c43776": {
        "autoBranch": true,
        "platforms": [
          "node"
        ],
        "directory": "platter"
      }
    }
  }
}
